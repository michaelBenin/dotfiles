  name = Mason Staugler
  email = mason@staugler.net

[color]
  ui = auto

[alias]
  # dl for 'download'. Is that a stupid name?
  dl = fetch --all --prune
  co = checkout
  st = status
  br = branch
  orphaned-commits = !git fsck --full --no-reflogs | grep commit
  updiff = "!git fetch --all --prune; git log --left-right ...@{u}"
  push-test = push -n origin HEAD
  push-hard = push origin HEAD
